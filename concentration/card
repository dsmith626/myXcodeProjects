import Foundation

struct Card
{
    var FaceUp = false
    var isMatched = false
    var identifier : Int
    
   static var identifierFactory = 0
    
    static func getUniqueIdentifier() -> Int {
    identifierFactory += 1
        return identifierFactory
    }
    
    init() {
        self.identifier = Card.getUniqueIdentifier()
    }
}
